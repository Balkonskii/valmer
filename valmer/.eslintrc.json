{
    "root": true,
    "ignorePatterns": ["**/*"],
    "plugins": ["import", "@nrwl/nx", "no-null"],
    "parser": "@typescript-eslint/parser",
    "settings": {
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true,
                "project": ["libs/*/tsconfig.json", "../*/tsconfig.json"]
            }
        },
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        }
    },
    "extends": ["@ptsecurity/eslint-config"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "no-null/no-null": 1,
                "@nrwl/nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "scope:app",
                                "onlyDependOnLibsWithTags": [
                                    "scope:core",
                                    "scope:feature",
                                    "scope:store",
                                    "scope:api",
                                    "scope:api-models",
                                    "scope:i18n",
                                    "scope:shared",
                                    "scope:environments",
                                    "scope:styles"
                                ]
                            },
                            {
                                "sourceTag": "e2e",
                                "onlyDependOnLibsWithTags": ["*"]
                            },
                            {
                                "sourceTag": "scope:store",
                                "onlyDependOnLibsWithTags": [
                                    "scope:store",
                                    "scope:api",
                                    "scope:api-models",
                                    "scope:shared",
                                    "scope:environments"
                                ]
                            },
                            {
                                "sourceTag": "scope:feature",
                                "onlyDependOnLibsWithTags": [
                                    "scope:feature",
                                    "scope:store",
                                    "scope:api",
                                    "scope:api-models",
                                    "scope:shared",
                                    "scope:environments",
                                    "scope:styles"
                                ]
                            },
                            {
                                "sourceTag": "scope:shared",
                                "onlyDependOnLibsWithTags": [
                                    "scope:api",
                                    "scope:api-models",
                                    "scope:environments",
                                    "scope:styles"
                                ]
                            },
                            {
                                "sourceTag": "scope:i18n",
                                "onlyDependOnLibsWithTags": ["scope:environments", "scope:shared"]
                            },
                            {
                                "sourceTag": "scope:api",
                                "onlyDependOnLibsWithTags": ["scope:api-models", "scope:environments"]
                            },
                            {
                                "sourceTag": "scope:core",
                                "onlyDependOnLibsWithTags": ["scope:environments", "scope:store"]
                            },
                            {
                                "sourceTag": "scope:styles",
                                "onlyDependOnLibsWithTags": []
                            }
                        ]
                    }
                ],
                "@angular-eslint/use-component-view-encapsulation": "off",
                "import/no-deprecated": "off",
                "import/no-unassigned-import": [
                    "error",
                    {
                        "allow": ["jest-preset-angular", "zone.js", "zone.js/**", "core-js/**"]
                    }
                ],
                "@angular-eslint/no-host-metadata-property": [
                    "error",
                    {
                        "allowStatic": true
                    }
                ],
                "@typescript-eslint/no-empty-function": [
                    "error",
                    {
                        "allow": ["arrowFunctions"]
                    }
                ]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "extends": ["plugin:@nrwl/nx/typescript"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "extends": ["plugin:@nrwl/nx/javascript"],
            "rules": {}
        }
    ]
}
